//HOMEPAGE SECTION

.homepage {
    background: $color-pastel-blue;
    width: 100%;
    height: 100vh;
    display: flex;
    margin: auto;
}

.homepage__image-carousel-container {
    margin: auto;
    text-align: center;
    overflow: hidden;
}

.homepage__image-carousel {
    tansform-style: preserve-3d;
    box-sizing: border-box;
}

.homepage__image-mask {
    position: absolute;
    top: 390px;
    left: 0;
    right: 10px;
    margin-left: auto;
    margin-right: auto;
    width: 654px;
    height: 390px;
    overflow: hidden;
}

.homepage__carousel-photo {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 654px;
    height: 390px;
    z-index: 100;
    transition: transform .5s, z-index .5s;
}

.homepage__carousel-photo--initial {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 654px;
    height: 390px;
    z-index: 900;
}

.homepage__carousel-photo--active {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 654px;
    height: 390px;
    z-index: 900;
}

.homepage__carousel-photo--prev {
    z-index: 800;
    transform: translateX(-100%); /* Move 'prev' item to the left */
}

.homepage__carousel-photo--next {
    z-index: 800;
    transform: translateX(100%); /* Move 'next' item to the right */
}

