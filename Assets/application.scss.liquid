// Variables
$color-pastel-blue: #E6F4FA;
$color-blue-main: #2F44A7;
$color-blue-secondary: #1C2966;
$color-grey-1: #747474;
$color-grey-2: #BABABA;
$color-grey-3: #E0E0E0;
$color-grey-4: #F5F5F5;
$color-white: #ffffff;

@mixin button-primary {
    color: $color-white;
    background-color: $color-blue-main;
    padding: 16px 32px;
    border-radius: 0px;
    &:hover:enabled {
        cursor: pointer;
        border-bottom: dashed 2px $color-white;
    }
    &:active:enabled {
        background-color: $color-blue-secondary;
        border-bottom: dashed 2px $color-white;
    }
    &:disabled {
        cursor: not-allowed;
        background: $color-grey-3;
        color: $color-grey-1;
    }
}

@mixin button-secondary {
    color: $color-blue-main;
    background-color: $color-white;
    border: 1px solid $color-blue-main;
    padding: 16px 32px;
    border-radius: 0px;
    &:hover:enabled {
        cursor: pointer;
        border-bottom: dashed 2px $color-blue-main;
    }
    &:active:enabled {
        background-color: $color-grey-3;
        border-bottom: dashed 2px $color-blue-main;
    }
    &:disabled {
        cursor: not-allowed;
        background-color: $color-grey-4;
        color: $color-grey-1;
        border: 1px solid $color-grey-2;
    }
}

@mixin link-text {
    text-decoration: none;
    color: $color-blue-main;
    background: transparent;
    border: none;
    border-bottom: dashed 2px $color-blue-main;
    line-height: 26px;
    padding: 4px 8px;
    &:hover {
        cursor: pointer;
        background: $color-grey-4;
    }
    &:active {
        background: $color-grey-3;
    }
}

@mixin link-text-disabled {
    color: $color-grey-1;
    border: none;
    background: transparent;
    padding: 4px 8px;
    cursor: not-allowed;
}

