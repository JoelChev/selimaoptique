.journalpage__carousel-image {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 100;
    transition: transform .5s, z-index .5s;

    @media (max-width: $breakpoint-tablet) {
        max-width: 100%;
        height: auto;
    }

}

.journalpage__carousel-image--active {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 900;
    @media (max-width: $breakpoint-tablet) {
        max-width: 100%;
        height: auto;
    }
