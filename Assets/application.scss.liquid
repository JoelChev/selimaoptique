.collectionpage {
    background: $color-lavendar;
    //height: 100vh;
    display: flex;
    flex-direction: column;
}

.collectionpage__header {
    margin-top: 20px;
    height: 46px;
    width: 100%;
    background-color: $color-lavendar-dark;
    display: flex;
    @media (max-width: $breakpoint-tablet) {
        display: none;
    }
}

.collectionpage__header-title-container {
    margin-left: 102px;
    margin-top: auto;
    margin-bottom: auto;
}

.collectionpage__header-title  {
    color: $color-black;
    margin-right: 48px;
    text-decoration: none;
    padding: 0 14px 10px;
}

.collectionpage__header-title--highlighted {
    color: $color-blue-main;
    margin-right: 48px;
    text-decoration: none;
    border-bottom: solid 3px $color-blue-main;
    padding: 0 14px 10px;
}

.collectionpage__mobile-title-container {
    padding-left: 16px;
    @media (min-width: $breakpoint-tablet) {
        display: none;
    }
}

.collectionpage__mobile-title {
    font-family: "Selima Caps";
    font-weight: 500;
    font-size: 32px;
    line-height: 26px;
}

.collectionpage__mobile-header {
    @media (min-width: $breakpoint-tablet) {
        display: none;
    }
}

.collectionpage__mobile-collection-options {
    display: flex;
    width: 100%;
    align-items: center;
    justify-content: center;
    list-style: none;
    padding-inline-start: 0;
    padding-left: 16px;
    padding-right: 16px;
    margin-bottom: -24px;
    @media (min-width: $breakpoint-tablet) {
        display: none;
    }
}

.collectionpage__mobile-collection-option {
    @media (min-width: $breakpoint-tablet) {
        display: none;
    }
}

.collectionpage__mobile-collection-option--left-selected {
    border: none;
    background: $color-blue-main;
    padding: 12px 24px;
    border-radius: 8px 0 0 8px;
}

.collectionpage__mobile-collection-option--right-selected {
    border: none;
    background: $color-blue-main;
    padding: 12px 24px;
    border-radius: 0 8px 8px 0;
}

.collectionpage__mobile-collection-title {
    font-family: "HK Grotesk";
    font-weight: 400;
    font-size: 11px;
    line-height: 18px;
    text-decoration: none;
    color: $color-black;
    @media (min-width: $breakpoint-tablet) {
        display: none;
    }
}

.collectionpage__mobile-collection-title--left {
    background: $color-white;
    border-top: 2px dotted $color-blue-main;
    border-bottom: 2px dotted $color-blue-main;
    border-radius: 8px 0 0 8px;
    padding: 12px 24px;
    border-left: 2px dotted $color-blue-main;
    border-right: 2px dotted $color-blue-main;
}

.collectionpage__mobile-collection-title--right {
    background: $color-white;
    border-top: 2px dotted $color-blue-main;
    border-bottom: 2px dotted $color-blue-main;
    border-radius: 0 8px 8px 0;
    padding: 12px 24px;
    border-left: 2px dotted $color-blue-main;
    border-right: 2px dotted $color-blue-main;
}

.collectionpage__mobile-collection-title--selected {
    font-family: "HK Grotesk";
    font-weight: 600;
    font-size: 11px;
    line-height: 18px;
    color: $color-white;
    @media (min-width: $breakpoint-tablet) {
        display: none;
    }
}

.collectionpage__product-table {
    margin-left: auto;
    margin-right: auto;
}

.collectionpage__product-tile {
    position: relative;
    margin: 54px 21px;
}

.collectionpage__product-tile-image {
    border: 3px solid $color-black;
}

.collectionpage__product-tile-title-container {
    padding: 16px 56px;
    background-color: $color-yellow;
    border: 3px solid $color-black;
    position: absolute;
    bottom: -36px;
    left: 0;
    right: 0;
    margin-left: auto;
    margin-right: auto;
    z-index: 10;
    width: fit-content;
    text-decoration: none;
}

.collectionpage__product-tile-title {
    color: $color-black;
    text-decoration: none;
    font-family: "Selima Caps";
    font-weight: 500;
    font-size: 32px;
    line-height: 26px;
}

.collectionpage__mobile-border-container {
    border-top: 3px dashed $color-black;
    width: 100%;
    content: '';
    height: 3px;
    margin: 56px 0;
    @media (min-width: $breakpoint-desktop) {
        display: none;
    }
}

.collectionpage__free-shipping-container {
    background-image: url("free-shipping-background.png");
    height: 72px;
    width: 333px;
    background-repeat: no-repeat;
    background-size: 333px 72px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: auto;
    margin-right: auto;
    @media (max-width: $breakpoint-tablet) {
        height: 54px;
        width: 254px;
        background-repeat: no-repeat;
        background-size: 254px 54px;
    }
}

.collectionpage__free-shipping-message {
    font-family: "Selima Caps";
    font-weight: 500;
    font-size: 24px;
    line-height: 19px;
    @media (max-width: $breakpoint-tablet) {
        font-size: 14px;
        line-height: 11px;
    }
}

//Product Page

.productpage {
    background: $color-lavendar;
    height: 100vh;
    display: flex;
    justify-content: space-evenly;
    
    @media(max-width: $breakpoint-tablet) {
        flex-direction: column;
    }

}

.productpage__product-information-container {
    margin-left: 138px;
    @media(max-width: $breakpoint-desktop) {
        margin-left: 0;
        padding-left: 18px;
    }
}

.productpage__product-back-link-container {
    display: flex;
    margin-bottom: 66px;
    @media(max-width: $breakpoint-tablet) {
        margin-bottom: 45px;
        margin-top: 32px;
    }
}

.productpage__product-back-link-icon {
    width: 22px;
    height: 22px;
    margin-right: 8px;
}

.productpage__product-back-link {
    @include link-text;
    margin-top: -8px;
}

.productpage__product-title-container {
    margin-bottom: 36px;
}

.productpage__product-title {
    font-family: "HK Grotesk";
    font-weight: 600;
    font-size: 32px;
    line-height: 40px;
    margin-bottom: 8px;
}

.productpage__variant-title {
    font-family: "HK Grotesk";
    font-weight: 400;
    font-size: 24px;
    line-height: 30px;
    margin-bottom: 32px;

    @media(max-width: $breakpoint-tablet) {
        font-size: 18px;
        line-height: 26px;
        margin-bottom: 16px;
    }
}

.productpage__variant-price {
    font-family: "HK Grotesk";
    font-weight: 600;
    font-size: 24px;
    line-height: 26px;
    color: $color-black;
    margin-bottom: 32px;

    @media(max-width: $breakpoint-tablet) {
        font-size: 18px;
        line-height: 26px;
    }
}

.productpage__purchase-button {
    @include button-primary;
    font-size: 16px;
    @media(max-width: $breakpoint-tablet) {
        width: calc(100% - 18px);
        margin-top: 48px;
        font-size: 18px;
    }
}

.productpage__product-description-container {
    p {
        margin-bottom: 16px;
        font-weight: 400;
        font-size: 14px;
        line-height: 22px;
        color: $color-black;

        @media(max-width: $breakpoint-tablet) {
            font-size: 16px;
            line-height: 24px;
        }
    }
}

.productpage__description {
    font-weight: 400;
    font-size: 14px;
    line-height: 22px;
    color: $color-black;
    margin-bottom: 32px;
}

.productpage__free-shipping-message {
    margin-top: 32px;
    font-weight: 400;
    font-size: 14px;
    line-height: 22px;
    color: $color-black;
}

.productpage__product-image-container {
    margin-right: 138px;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    @media (max-width: $breakpoint-desktop) and (min-width: $breakpoint-tablet) {
        margin-right: 18px;
    }
    @media(max-width: $breakpoint-tablet) {
        display: none;
    }
}

.productpage__product-image-container-mobile {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    position: relative;
    @media(min-width: $breakpoint-tablet) {
        display: none;
    }
}

.productpage__primary-product-image-container {
    @media(max-width: $breakpoint-desktop) {
        margin-top: -80px;
    }
    @media(max-width: $breakpoint-tablet) {
        position: relative;
    }
}

.productpage__primary-image {
    border: 3px solid $color-black;
    margin-top: 110px;
    @media (max-width: $breakpoint-desktop) and (min-width: $breakpoint-tablet) {
        margin-top: 190px;
        max-width: 400px;
    }
    @media (max-width: $breakpoint-tablet) {
        margin-top: 90px;
    }
}

.productpage__primary-image-accent {
    width: 150px;
    height: 128px;
    position: absolute;
    top: 80px;
    right: -40px;
    @media (max-width: $breakpoint-desktop) and (min-width: $breakpoint-tablet) {
        top: 72px;
        width: 120px;
        height: 104px;
        right: -10px;
    }
    @media (max-width: $breakpoint-tablet) {
        top: 72px;
        width: 80px;
        height: 68px;
        right: 36px;
    }
}

.productpage__secondary-product-image-row-container {
    margin-top: 32px;
    display: flex;
    @media (max-width: $breakpoint-desktop) and (min-width: $breakpoint-tablet) {
        max-width: 400px;
    }
    @media (max-width: $breakpoint-tablet) {
        margin-left: -16px;
    }
}

.productpage__secondary-product-button {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: transparent;
    border: none;
    cursor: pointer;
    &:active {
        outline: 0;
        box-shadow: none!important;
    }
    &:focus {
        outline: 0;
        box-shadow: none!important;
    }
}

.productpage__secondary-image {
    border: 3px solid $color-black;
    margin: 0 16px 16px;
}

.productpage__secondary-product-title {
    font-size: 14px;
    line-height: 22px;
    color: $color-black;
}

.productpage__secondary-product-image-container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.productpage__secondary-image--selected {
    border: 3px solid $color-black;
    margin: 0 16px 16px;
}

.productpage__secondary-product-title--selected {
    font-size: 14px;
    line-height: 22px;
    color: $color-blue-main;
    border-bottom: 2px dashed $color-blue-main;
    padding-bottom: 4px;
}


